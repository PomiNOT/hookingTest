{
    "compilerOptions": {
        "strict": true,
        "target": "ES2017",
        "noImplicitAny": true,
        "skipLibCheck": true,
        "moduleResolution": "Node",
        "module": "ESNext",
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
    },
    "include": [
        "src/**/*",
        "test/**/*"
    ],
    "exclude": [
        "node_modules"
    ],
    "ts-node": {
        "esm": true
    }
}